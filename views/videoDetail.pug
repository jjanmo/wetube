extends ./layouts/main

block content   
    .videoContainer
        .videoWatch
            video(src=`/${video.fileUrl}` controls=true)
        .videoInfo
            a(href=`${routes.videos}${routes.editVideo(video.id)}`) Edit Video
            h3.videoTitle= video.title
            span.videoViews= video.views
            h4.video.description= video.description