extends ./layouts/main
include ./mixins/videoBlock

block content   
    p Searching for #{term}
    .videosContainer
        if videos.length !== 0
            each video in videos
                +videoBlock({
                    file : video.fileUrl,
                    title : video.title,
                    description : video.description,
                    views : video.views,
                    id : video.id
                })
        else 
            h3 No results found
            h5 Try different keywords or remove search filters
