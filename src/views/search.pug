extends ./layouts/main
include ./mixins/videoBlock

block content   
    p.searchTerm Searching for 
        span #{term}
    if videos.length !== 0
        .videosContainer
            each video in videos
                +videoBlock({
                    id : video.id,
                    file : video.fileUrl,
                    title : video.title,
                    description : video.description,
                    views : video.views,
                    createdAt : dateFormatter(video.createdAt),
                    creator : video.creator
                })
    else
        .notFound 
            img(src="https://cdn.dribbble.com/users/1554526/screenshots/3399669/no_results_found.png")